---
const { text, width1=1, width2=1 } = Astro.props;
---

<div class="container">
  <div class="col">
    <slot name="left" />
  </div>
  <div class="col">
    <slot name="right" />
  </div>
</div>

<style define:vars={{col1:width1+"fr" , col2:width2+"fr"}}>
  .container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .col {
    border: 1px solid var(--color-text);
    padding: 1rem;
  }

  @media (min-width: 600px){
   .container {
    grid-template-columns: var(--col1) var(--col2);
  
  }
  }

</style>